<% provide(:title, "Home") %>


<div class="center jumbotron" id= "banner">
    <h1>Welcome to Redmart</h1>
    <h2>
        The Freshest Groceries delivered on your door step!
      </h2>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
     <h3>Your review of our Services</h3>
     <%= render 'shared/feed' %>
   </div>
  </div>


<% end %>
