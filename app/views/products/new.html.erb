<h1>Product Registration Form</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@product) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :price %>
        <%= f.text_field :price %>
    <p><label for= "product_picture">Image</label><br />
        <%= file_field 'product', 'pictureimg' %></p>

        <%= f.submit "Register New Product", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
